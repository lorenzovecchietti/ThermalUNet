Q_component_0
{
    type            scalarSemiImplicitSource;  // sorgente su T nella regione solida
    active          yes;
    selectionMode   cellZone;
    cellZone        component_0;
    volumeMode      absolute;                 // Q è potenza totale [W] distribuita sul cellZone
    injectionRateSuSp
    {
        T           (7.1 0);                 // Su = Q/(rho*cp*V) in [K/s]; con absolute, usa Q totale → foam gestisce distribuzione volumetrica
    }
}
